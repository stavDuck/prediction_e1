<?xml version="1.0" encoding="UTF-8"?>
<PRD-world xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="predictions-v1.xsd">
	<PRD-evironment>
		<PRD-env-property type="boolean">
			<PRD-name>booleanEnv</PRD-name>
		</PRD-env-property>
		<PRD-env-property type="decimal">
			<PRD-name>decimalEnv</PRD-name>
			<PRD-range from="10" to="100"/>
		</PRD-env-property>
		<PRD-env-property type="float">
			<PRD-name>floatEnv</PRD-name>
			<PRD-range from="0" to="10"/>
		</PRD-env-property>	
		<PRD-env-property type="string">
			<PRD-name>stringEnv</PRD-name>
		</PRD-env-property>				
	</PRD-evironment>
	<PRD-entities>
		<PRD-entity name="Smoker">
			<PRD-population>4</PRD-population>
			<PRD-properties>
				<PRD-property type="decimal">
					<PRD-name>decimalProp</PRD-name>
					<PRD-range to="10" from="0"/>
					<PRD-value random-initialize="false" init="0"/>
				</PRD-property>
				<PRD-property type="boolean">
					<PRD-name>boolProp</PRD-name>
					<PRD-value random-initialize="false" init="false"/>
				</PRD-property>		
				<PRD-property type="string">
					<PRD-name>stringProp</PRD-name>
					<PRD-value random-initialize="false" init="abc"/>
				</PRD-property>	
				<PRD-property type="float">
					<PRD-name>floatProp</PRD-name>
					<PRD-range from="0" to="100"/>
					<PRD-value random-initialize="false" init="20"/>
				</PRD-property>				
			</PRD-properties>
		</PRD-entity>
	</PRD-entities>
	<PRD-rules>
		<PRD-rule name="got-cancer">
			<PRD-actions>
				<PRD-action entity="Smoker" type="condition">
					<PRD-condition singularity="multiple" logical="and">
						<PRD-condition singularity="single" entity="Smoker"  property="decimalProp" operator="bt" value="environment(decimalEnv)"/>
					</PRD-condition>
					<PRD-then>
						<PRD-action entity="Smoker" type="increase" property="decimalProp" by="random(5)"></PRD-action>
						<PRD-action type="decrease" entity="Smoker" property="floatProp" by="3"/>
						<PRD-action entity="Smoker" type="increase" property="lung-cancer-progress" by="random(5)"></PRD-action>
						<PRD-action type="calculation" entity="Smoker" result-prop="floatProp">
							<PRD-multiply arg1="floatProp" arg2="environment(decimalEnv)"/>
						</PRD-action>
						<PRD-action type="calculation" entity="Smoker" result-prop="decimalProp">
							<PRD-divide arg1="decimalProp" arg2="4"/>
						</PRD-action>
						<PRD-action type="set" entity="Smoker" property="boolProp" value="stringProp"/>

					</PRD-then>
				</PRD-action>
			</PRD-actions>
		</PRD-rule>
		</PRD-rules>
	<PRD-termination>	
		<PRD-by-ticks count="3"/>
		<PRD-by-second count="3000"/>
	</PRD-termination>
</PRD-world>
