<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- USER SERVLETS  /-->
    <servlet>
        <servlet-name>LoginResponseServlet</servlet-name>
        <servlet-class>servlets.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginResponseServlet</servlet-name>
        <url-pattern>/loginResponse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DtoResponseServlet</servlet-name>
        <servlet-class>servlets.DtoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DtoResponseServlet</servlet-name>
        <url-pattern>/dtoResponse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutUserResponseServlet</servlet-name>
        <servlet-class>servlets.user.LogoutUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutUserResponseServlet</servlet-name>
        <url-pattern>/logoutUserResponse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExecuteNewSimulationServlet</servlet-name>
        <servlet-class>servlets.user.ExecuteNewSimulationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExecuteNewSimulationServlet</servlet-name>
        <url-pattern>/executeNewSimulationServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetXmlsServlet</servlet-name>
        <servlet-class>servlets.user.GetXmlsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetXmlsServlet</servlet-name>
        <url-pattern>/getXmlsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddNewRequestFromUser</servlet-name>
        <servlet-class>servlets.user.AddNewRequestFromUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewRequestFromUser</servlet-name>
        <url-pattern>/addNewRequestFromUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetUserRequests</servlet-name>
        <servlet-class>servlets.user.GetUserRequestsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUserRequests</servlet-name>
        <url-pattern>/getUserRequests</url-pattern>
    </servlet-mapping>


    <!-- ADMIN SERVLETS  /-->
    <servlet>
        <servlet-name>UploadXmlServlet</servlet-name>
        <servlet-class>servlets.admin.UploadXml</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadXmlServlet</servlet-name>
        <url-pattern>/uploadXml</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginAdminResponseServlet</servlet-name>
        <servlet-class>servlets.admin.LoginAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAdminResponseServlet</servlet-name>
        <url-pattern>/loginAdminResponse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutAdminResponseServlet</servlet-name>
        <servlet-class>servlets.admin.LogoutAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutAdminResponseServlet</servlet-name>
        <url-pattern>/logoutAdminResponse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateThreadPoolNumberServlet</servlet-name>
        <servlet-class>servlets.admin.UpdateThreadPoolNumberServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateThreadPoolNumberServlet</servlet-name>
        <url-pattern>/updateThreadPoolNumber</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetThreadPoolInfoServlet</servlet-name>
        <servlet-class>servlets.admin.GetThreadPoolInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetThreadPoolInfoServlet</servlet-name>
        <url-pattern>/getThreadPoolInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateRequestStatus</servlet-name>
        <servlet-class>servlets.admin.UpdateRequestStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateRequestStatus</servlet-name>
        <url-pattern>/updateRequestStatus</url-pattern>
    </servlet-mapping>

</web-app>